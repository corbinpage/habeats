<div class="row">
  <div class="col-xs-12 center-block text-center">
    <div class="row title-row">
      <div class="col-xs-12 center-block text-center">
        <a class="editable-title" data-pk="<%=g.id%>" data-url="<%=update_title_path(g.id)%>"><%= g.name %></a>
      </div>
    </div>
    <%= form_tag('/goals/'+g.id.to_s+'/update_progress', remote: true, class: "day-form", id: "goal-"+g.id.to_s+"-form") do %>
    <div class="form-group">
      <div class="day-btn-group center-block">
        <%= button_tag(value: "add", type: "submit", class: "btn btn-success btn-lg change-score add-score") do %>
        <i class="fa fa-plus"></i>
        <% end %>
        <%= button_tag(value: "subtract", type: "submit", class: "btn btn-danger btn-xs change-score subtract-score") do %>
        <i class="fa fa-minus"></i>
        <% end %>
      </div>
    </div>
    <div class="form-group">
      <% date_month = g.progresses.map {|p| p.date.strftime("%m-%d-%Y")}.reverse %>
      <%= select_tag(:date, options_for_select(date_month, g.progresses.first.date), class: "center-block day-selector form-control", id: g.id.to_s+"-day-selector", data: {gid: g.id.to_s}) %>
    </div>
    <% end %>
  </div>
</div>