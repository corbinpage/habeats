<div class="row">
  <div class="col-xs-12 center-block text-center">
    <h3><%= g.name %></h3>
    <%= form_tag('/goal/'+g.id.to_s+'/update_day', remote: true, class: "day-form") do %>
    <div class="form-group">
      <div class="day-btn-group center-block">
        <%= submit_tag("+", class: "btn btn-success btn-lg change-score add-score") %>
        <%= submit_tag("-", class: "btn btn-danger  btn-xs change-score subtract-score") %>
        <!-- <i id="fa-edit" class="fa fa-edit fa-stack-1x fa-inverse"></i> -->
      </div>
    </div>
    <div class="form-group">
      <% date_month = g.days.map {|d| [d.date.strftime("%m-%d-%Y"), d.id]} %>
      <%= select_tag(:day_id, options_for_select(date_month, g.days.last.id), class: "center-block day-selector form-control", id: g.id.to_s+"-day-selector") %>
    </div>
    <% end %>
  </div>
</div>