<div class="col-md-3 col-sm-4 col-xs-12">
  <div class="panel panel-new center-block">
    <div class="panel-body">
      <div class="row">
        <div class="col-xs-12 center-block text-center">
          <div class="row title-row">
            <div class="col-xs-12 center-block text-center">
              <p class="new-goal-title text-centered">Add Goal</p>
            </div>
          </div>
          <%= form_tag('/goals', class: "goal-form") do %>
          <div class="form-group">
            <div class="goal-btn-group center-block">
              <%= submit_tag("+", class: "btn btn-md add-goal center-block") %>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>